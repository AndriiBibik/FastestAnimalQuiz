<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="@dimen/answer_card_corners"
    app:cardElevation="@dimen/answer_card_elevation"
    app:cardBackgroundColor="@color/answer_card_background"
    android:layout_marginBottom="@dimen/answer_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/answer_horizontal_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/answer_checkbox"
            android:layout_width="@dimen/checkbox_size"
            android:layout_height="@dimen/checkbox_size"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/checkbox_margin_right"
            app:srcCompat="@drawable/ic_checkbox_unchecked"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/answer_image"
            android:layout_width="@dimen/answer_image_size"
            android:layout_height="@dimen/answer_image_size"
            android:layout_marginRight="@dimen/answer_image_right_margin"
            android:layout_marginVertical="@dimen/answer_image_vertical_margin"/>
        <TextView
            android:id="@+id/answer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/answer_text_size"
            android:text="Wolf"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>