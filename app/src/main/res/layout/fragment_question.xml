<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".QuestionFragment">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/question_text_bottom_margin"
        android:fontFamily="@font/pacifico"
        android:textSize="@dimen/question_text_size" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/answers_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clipToPadding="false"
        app:flexDirection="column"
        android:padding="4dp" />

    <LinearLayout
        android:id="@+id/next_question_button"
        style="@style/dark_button_style"
        android:layout_marginLeft="@dimen/next_button_left_margin"
        android:layout_marginTop="@dimen/next_button_top_margin"
        android:visibility="gone">

        <TextView
            style="@style/dark_button_text_style"
            android:text="@string/next_question_button_text" />
    </LinearLayout>
</LinearLayout>